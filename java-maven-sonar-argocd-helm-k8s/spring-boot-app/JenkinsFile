pipeline {
    agent none  // No global agent to avoid path conflicts

    stages {
        stage('Build and Test + Sonar') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-17'
                    args '--user root'
                }
            }
            steps {
                sh 'mvn -version'
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'mvn clean package'
                    withCredentials([string(credentialsId: 'sonar-token', variable: 'SONAR_AUTH_TOKEN')]) {
                        sh "mvn sonar:sonar -Dsonar.token=$SONAR_AUTH_TOKEN -Dsonar.host.url=http://65.0.185.195:9000"
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
            agent any // Runs directly on the Ubuntu Host (where Docker is installed)
            environment {
                DOCKER_IMAGE = "abhishekf5/ultimate-cicd:${BUILD_NUMBER}"
            }
            steps {
                // IMPORTANT: Re-checkout because we are on a different agent
                checkout scm 
                script {
                    dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                        // Use the host's Docker daemon
                        docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                            def myImage = docker.build("${DOCKER_IMAGE}")
                            myImage.push()
                        }
                    }
                }
            }
        }

        stage('Update Deployment File') {
            agent any
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "abhishek.xyz@gmail.com"
                        git config user.name "Abhishek Veeramalla"
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                        # ... rest of your git commands ...
                    '''
                }
            }
        }
    }
}
